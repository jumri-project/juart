{
  "name": "Dev Container",
  "build": {
    "dockerfile": "conda/Dockerfile",
    "context": ".."
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff"
      ]
    }
  },
  "remoteUser": "root",
  "updateRemoteUserUID": true,
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/root/.aws,type=bind"
  ],
  "postCreateCommand": "sh .devcontainer/post-create.sh"
}